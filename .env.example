APP_NAME="TheWerk"
APP_ENV=local
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database (Supabase PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=
DB_SSLMODE=require
DATABASE_URL=

# Application / Session
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# Cache / Queue (use array for serverless, database for persistent)
CACHE_STORE=array
QUEUE_CONNECTION=sync

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="TheWerk"

# Storage (Supabase S3-compatible)
FILESYSTEM_DISK=supabase
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=products
AWS_ENDPOINT=
AWS_URL=
AWS_USE_PATH_STYLE_ENDPOINT=true

# Supabase REST API keys
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_ANON_KEY=

# Gemini API (Google)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Optional: Third party keys
SENTRY_DSN=
VITE_APP_NAME="TheWerk"

# Vercel Serverless Cache Paths (auto-set by vercel.json)
VIEW_COMPILED_PATH=/tmp/views

# DO NOT STORE PRODUCTION SECRETS HERE. This example file is intentionally blank.
